<%= form_for(@article) do |f| %>
<div class="mb-3 width-400px">
  <%= f.label :title, class: "form-label" %>
  <%= f.text_field :title, class: "form-control" %>
</div>
<div class="mb-3">
  <%= f.label :content, class: "form-label" %>
  <%= f.text_field :content, class: "form-control" %>
  <%= f.submit %>
</div>
<% end %>
